# .envrc - Fixed version
is_nixos() {
    [[ -f /etc/NIXOS ]] || [[ -d /nix/store && -n "$NIX_PATH" ]]
}

if is_nixos; then
    use flake  # Use the flake environment instead of repeated nix-shell calls
    
    # Force uv to use system Python and never download its own
    export UV_PYTHON_DOWNLOADS=never
    export UV_PYTHON=$(which python3)
    export UV_PYTHON_PREFERENCE=system
    
    echo "ðŸ§ NixOS detected - using system Python with uv"
    
    # Auto-sync normally (uv should work now with system Python)
    if [[ -f pyproject.toml ]] && command -v uv >/dev/null 2>&1; then
        echo "ðŸ“¦ Syncing dependencies..."
        uv sync --quiet
    fi
else
    echo "ðŸ§ Non-NixOS system - using native uv"
    
    # Auto-sync normally
    if [[ -f pyproject.toml ]] && command -v uv >/dev/null 2>&1; then
        echo "ðŸ“¦ Syncing dependencies..."
        uv sync --quiet
    fi
fi

PATH_add scripts/

echo "âœ… AM215 environment ready"
echo "ðŸ’¡ Use 'uv run jupyter-book build jupyter-book' to build"
